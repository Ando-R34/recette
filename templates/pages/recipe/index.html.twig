{% extends 'base.html.twig' %}

{% block title %}Mes Recette{% endblock %}
 

{% block body %}
 <a href="{{path('recipe.new')}}" class="btn btn-primary">
    Créer un ingredient
  </a>
    <div class="container mt-4">
    {% if not recipes is same as([]) %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}

      <div>
        {{recipes.getTotalItemCount}}
      </div>

    <table class="table caption-top">
  <thead>
    <tr>
      <th scope="col">Numéro</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Difficuté</th>
      <th scope="col">Date de creation</th>
      <th scope="col">Edition</th>
      <th scope="col">Suppresion</th>
    </tr>
  </thead>
  <tbody>
   {% for recipe in recipes %}
    <tr>
      <th scope="row">{{recipe.id}}</th>
      <td> {{recipe.name}} </td>
      <td> 
      {% if recipe.price is null%} 
        Non renseigné
      {% else %}
        {{ recipe.price }}
      {% endif %}
       </td>
      <td>
      {% if recipe.difficulty is null%} 
        Non renseigné
      {% else %}
        {{ recipe.difficulty }}
      {% endif %}
      </td>
      <td> {{recipe.createdAt|date('d/m/Y')}} </td>
      <td> todo </td>
      <td> todo </td>

    </tr>
        {% endfor %}
  </tbody>
</table>
    <div class="navigation d-flex justify-content-center" >
    {{knp_pagination_render(recipes)}}
    </div>
    {% else %}
      <h4>il n'y a pas d'recette</h4>
      {% endif %}
    </div>
{% endblock %}
